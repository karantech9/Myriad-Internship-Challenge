<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@color/button_material_dark"
    android:focusable="true"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="#DADBDB">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/kingdomImg"
            android:scaleType="fitXY"
            android:src="@drawable/myriad_logo"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="italic"
            android:text="Kingdom Name"
            android:clickable="true"
            android:id="@+id/kingdomTitle"

            android:layout_alignBottom="@+id/kingdomImg"
            android:layout_alignEnd="@+id/kingdomImg" />

    </RelativeLayout>


    </android.support.v7.widget.CardView>
